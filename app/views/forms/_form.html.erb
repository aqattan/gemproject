<%= semantic_form_for @form do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :name,   :hint => "Enter your name" %>
    <%= f.input :address, :hint => "Enter your address" %>
    <%= f.input :date, :hint =>"Select the date" %> 
    <%= f.input :time, :hint =>"Select the time"%>
    <%= f.input :comment, :hint =>"Enter any comment"%>
    <%= f.input :public, :hint =>"Please Check if you would like to make your comment public to all?"%>
  <% end %>
  
  <%= f.submit do %>
    <%= f.submit :button_html => {:class => "primary"} %>
  <% end %>
<% end %>
